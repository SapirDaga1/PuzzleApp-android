<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FirstScreenActivity"
    android:id="@+id/first_screen_layout"
    android:background="@drawable/first_screen_photo">

        <!--Play Button-->
    <RelativeLayout
        android:id="@+id/play_combine"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp">
        <Button
            android:id="@+id/play_btn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_yellow_puzzle_button"
            android:fontFamily="@font/font3"
            android:text="@string/play_btn"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/shine_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/shine_effect"
            />
    </RelativeLayout>
    <!-- End Play button -->
    <!-- About Button-->
    <RelativeLayout
        android:id="@+id/about_combine"
        android:layout_width="140dp"
        android:layout_below="@+id/play_combine"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/recordsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_green_puzzle_btn"
            android:fontFamily="@font/font3"
            android:text="@string/records_btn"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/shine_about"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dp"
            android:src="@drawable/shine_effect"
            />
</RelativeLayout>


        <!--About button End-->
        <!--Records Button-->
        <RelativeLayout
            android:id="@+id/records_combine"
            android:layout_below="@+id/about_combine"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/shine_record"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-50dp"
                android:src="@drawable/shine_effect"
                />


        </RelativeLayout>
        <!--Records Button End-->


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="20dp"
        android:layout_alignTop="@id/about_combine"
        android:paddingTop="160dp"
        app:lottie_rawRes="@raw/bluebird"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


</RelativeLayout>