<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout android:layout_gravity="center"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content"
    android:layout_width="300dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:background="@drawable/dialog_backround"
        android:layout_centerHorizontal="true"
        android:id="@+id/dialog_layout">

        <TextView android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/title_tv"
            android:fontFamily="@font/font1"
            android:textSize="26sp"
            android:text="Pick a Level"
            android:textColor="@color/white"/>

        <View android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:id="@+id/mb"
            android:layout_below="@id/title_tv"/>


        <RadioGroup android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/level_rg"
            android:layout_below="@id/mb">

            <RadioButton android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:padding="5dp"
                android:background="@drawable/radio_btn_selector"
                android:id="@+id/easy_rb"
                android:textSize="20sp"
                android:text="@string/easy_lvl"
                android:fontFamily="@font/font1"
                android:textColor="@color/white"
                android:button="@null"
                android:layout_marginBottom="5dp"/>

            <RadioButton android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:padding="5dp"
                android:background="@drawable/radio_btn_selector"
                android:id="@+id/medium_rb"
                android:textSize="20sp"
                android:text="@string/medium_lvl"
                android:textColor="@color/white"
                android:fontFamily="@font/font1"
                android:button="@null"
                android:layout_marginBottom="5dp"/>

            <RadioButton android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:padding="5dp"
                android:background="@drawable/radio_btn_selector"
                android:id="@+id/hard_rb"
                android:textSize="20sp"
                android:text="@string/hard_lvl"
                android:textColor="@color/white"
                android:fontFamily="@font/font1"
                android:button="@null"
                android:layout_marginBottom="5dp"/>

            <RadioButton android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:padding="5dp"
                android:background="@drawable/radio_btn_selector"
                android:id="@+id/very_hard_rb"
                android:textSize="20sp"
                android:text="@string/super_hard_lvl"
                android:textColor="@color/white"
                android:fontFamily="@font/font1"
                android:button="@null"
                android:layout_marginBottom="5dp"/>

        </RadioGroup>

    </RelativeLayout>


    <LinearLayout android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_layout"
        android:layout_marginTop="-20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/cancel_btn"
            android:fontFamily="@font/font1"
            android:textColor="@color/white"
            android:id="@+id/cancel_btn" android:text="Cancel"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginEnd="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/select_btn"
            android:fontFamily="@font/font1"
            android:id="@+id/select_btn"
            android:text="Select"
            android:textColor="@color/white"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>

</RelativeLayout>