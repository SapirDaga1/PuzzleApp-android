<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/dialog_backround"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/win_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:id="@+id/winner_anim"
        app:lottie_rawRes="@raw/winner_anim"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>

    <TextView android:padding="15dp"
        android:gravity="center"
        android:background="@drawable/radio_btn_selected"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/scoreView"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="200"
        android:layout_marginTop="10dp"/>

    <EditText
        android:padding="10dp"
        android:background="@drawable/radio_btn_unselected"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/name_ET"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/white"
        android:hint="@string/name_hint"
        android:maxLength="16"
        android:maxLines="1"
        android:lines="1"
        android:inputType="text"
        android:fontFamily="@font/font1"/>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

    <Button
        android:background="@drawable/ic_home_button"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:id="@+id/buttonBackHome"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/select_btn"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/select_btn"
        android:textColor="@color/black"
        android:text="@string/ok_hint"
        android:fontFamily="@font/font1"
        android:layout_marginEnd="20dp"
        android:foreground="?android:attr/selectableItemBackground"/>

    <Button
        android:background="@drawable/ic_score_button"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:id="@+id/buttonRecords"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>