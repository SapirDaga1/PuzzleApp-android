<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:padding="10dp"
    android:background="@drawable/dialog_backround"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/win_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_height="250dp"
        android:layout_width="300dp"
        android:id="@+id/winner_anim"
        app:lottie_rawRes="@raw/winner_anim"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>

        <EditText
            android:id="@+id/name_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/radio_btn_unselected"
            android:fontFamily="@font/font1"
            android:hint="@string/name_hint"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center" 
            android:background="@drawable/select_btn"
            android:fontFamily="@font/font1"
            android:id="@+id/select_btn"
            android:text="@string/ok_hint"
            android:textColor="@color/white"
            android:foreground="?android:attr/selectableItemBackground"/>


    -<LinearLayout
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

    <Button
        android:background="@drawable/ic_home_button"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:id="@+id/buttonBackHome"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:background="@drawable/radio_btn_selected"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/scoreView"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:background="@drawable/ic_score_button"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:id="@+id/buttonRecords"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>